@model IEnumerable< Abc.MvcWebUI.Entity.Category>


@{ 
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}
    <div class="list-group">

        <a href="/Home/List" class="list-group-item">
            <i class="fas fa-angle-double-right"></i>
            Tüm Kategoriler
        </a>




        @foreach (var item in Model)
        {
            if (selectedCategory != null)
            {
                if (item.Id == int.Parse(selectedCategory.ToString()))
                {
                    //Seçilen kategori ile route id si eşit


                    <a href="/Home/List/@item.Id"
                       class="list-group-item active ">
                        <i class="fas fa-angle-double-right"></i>
                        @item.Name
                    </a>

                }
                else
                {

                    <a href="/Home/List/@item.Id"
                      class="list-group-item  ">
                        <i class="fas fa-angle-double-right"></i> 
                        @item.Name 
                    </a>
                }
            }
            else
            {
                <a href="/Home/List/@item.Id" 
                  class="list-group-item  ">
                  <i class="fas fa-angle-double-right"></i> 
                    @item.Name 
                </a>
            }


        }




    </div>